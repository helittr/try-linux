{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "config kernel",
            "type": "shell",
            "runOptions": {
                "instanceLimit": 1
            },
            "command": "make O=./out/ ARCH=arm CROSS_COMPILE=arm-linux-gnueabihf- menuconfig"
        },
        {
            "label": "build",
            "type": "shell",
            "hide": true,
            "command": "make ARCH=arm O=./out/ CROSS_COMPILE=arm-linux-gnueabihf- -j8 zImage",
            "problemMatcher": "$gcc",
            "detail": "build kernel with arch arm",
            "icon": {
                "id": "inbox",
                "color": "terminal.ansiRed"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build kernel",
            "type": "shell",
            "isBackground": false,
            "problemMatcher": "$gcc",
            "runOptions": {
                "instanceLimit": 1
            },
            "command": "python3 ${workspaceFolder}/scripts/clang-tools/gen_compile_commands.py",
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "run kernel",
            "type": "shell",
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            },
            "command": "qemu-system-arm -m 4096 -initrd ${workspaceFolder}/../initramfs/initramfs.cpio -kernel ${workspaceFolder}/out/arch/arm/boot/zImage -machine virt -nographic -s -S -append 'init=linuxrc console=ttyAMA0'",
            "detail": "start kernel by using qemu",
            "problemMatcher": "$gcc",
        }
    ]
}